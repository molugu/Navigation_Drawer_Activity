<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.incresol_078.navigation_drawer_activity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NotificationsActivity"
            android:theme="@style/Theme.AppCompat.CustomActionBar"/>
        <activity
            android:name=".SubNotification"
            android:theme="@style/Theme.AppCompat.CustomActionBar"
            android:configChanges="keyboardHidden|locale|screenLayout|navigation|screenSize"/>
    </application>

</manifest>